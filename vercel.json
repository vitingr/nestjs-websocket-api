{
  "version": 2,
  "builds": [
    {
      "src": ".dist/src/main.js",
      "use": "@vercel/node",
      "config": { 
        "maxLambdaSize": "2048MB",
        "includeFiles": [
          "dist/**/*.graphql"
        ]
      }
    },
    {
      "rewrites": [{ "source": "/(.*)", "destination": "/api" }]
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": ".dist/src/main.js"
    }
  ]
}